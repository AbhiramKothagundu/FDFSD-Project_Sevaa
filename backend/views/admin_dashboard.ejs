<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <style>
        body {
            background-color: #f8f9fa;
        }
        .container {
            margin-top: 30px;
        }
        .card {
            margin-bottom: 20px;
        }
        .logout-link {
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <h1 class="text-center">Welcome, <%= mod.username %> (Role: <%= mod.role %>)</h1>

        <% if (mod.role === 'superuser') { %>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Moderators List</h2>
                </div>
                <div class="card-body">
                    <ul id="moderators-list" class="list-group"></ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Admins List</h2>
                </div>
                <div class="card-body">
                    <ul id="admins-list" class="list-group"></ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Donors List</h2>
                </div>
                <div class="card-body">
                    <ul id="donors-list" class="list-group"></ul>
                </div>
            </div>

        <% } else if (mod.role === 'moderator') { %>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Admins List</h2>
                </div>
                <div class="card-body">
                    <ul id="admins-list" class="list-group"></ul>
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Donors List</h2>
                </div>
                <div class="card-body">
                    <ul id="donors-list" class="list-group"></ul>
                </div>
            </div>
        
        <% } else if (mod.role === 'admin') { %>
            <div class="card">
                <div class="card-header">
                    <h2 class="mb-0">Donors List</h2>
                </div>
                <div class="card-body">
                    <ul id="donors-list" class="list-group"></ul>
                </div>
            </div>

        <% } else { %>
            <div class="alert alert-danger" role="alert">
                You do not have permission to view this list.
            </div>
        <% } %>

        <div class="text-center logout-link">
            <a href="/admin/logoutAdmin" class="btn btn-danger">Logout</a>
        </div>
    </div>

    <script src="/js/admin_dashboard.js"></script>
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
</body>
</html>
